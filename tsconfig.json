{
  "extends": "@tsconfig/node14/tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": ".",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,

    "removeComments": false,
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "importHelpers": true
  },
  "exclude": ["dist"]
}
