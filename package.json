{
  "name": "week-ranger",
  "version": "0.9.2",
  "description": "A simple library to manage time",
  "keywords": [
    "week",
    "range",
    "time",
    "date",
    "parse",
    "format",
    "validate"
  ],
  "author": "Gianluca Marco Caputo <glmcaputo@gmail.com>",
  "repository": "github:GlCap/week-ranger",
  "homepage": "https://github.com/GlCap/week-ranger#readme",
  "bugs": {
    "url": "https://github.com/GlCap/week-ranger/issues",
    "email": "glmcaputo@gmail.com"
  },
  "license": "MIT",
  "files": [
    "src",
    "dist"
  ],
  "main": "dist/cjs/index.js",
  "browser": "dist/browser/index.js",
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json && tsc -p tsconfig.browser.json",
    "format": "prettier --write .",
    "lint": "eslint \"{src,apps,libs,test}/**/*.{ts,js}\" --fix",
    "typecheck": "tsc --noEmit",
    "typecheck:watch": "pnpm typecheck --watch",
    "test": "jest --runInBand",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:watch-coverage": "jest --watch --coverage",
    "prebuild": "pnpm clean",
    "clean": "rimraf ./dist",
    "prepublish": "pnpm clean && pnpm build"
  },
  "dependencies": {
    "tslib": "^2.2.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.0.1",
    "@commitlint/config-conventional": "^12.0.1",
    "@tsconfig/node14": "^1.0.0",
    "@types/jest": "^26.0.22",
    "@types/node": "^14.14.37",
    "@typescript-eslint/eslint-plugin": "^4.20.0",
    "@typescript-eslint/parser": "^4.20.0",
    "eslint": "^7.23.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-config-standard-with-typescript": "^20.0.0",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.3.1",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.5.4",
    "typescript": "^4.2.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged && lint-staged",
      "pre-push": "tsc --noEmit"
    }
  },
  "lint-staged": {
    "./*.ts": [
      "eslint --fix"
    ]
  }
}
